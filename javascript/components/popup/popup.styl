@require('../../../styl/responsive')
@require('../../../styl/mixins')

#popup-region
    background rgb(242,242,242)
    border solid 1px rgb(205,205,205)
    border-left 0
    bottom 10%
    left 0
    $opacity(0)
    padding 2em 1.5em
    position absolute
    right 30%
    top 10%
    $transition(all 2s);

    @media $medium-display
        right 70%

    @media $large-display
        right 80%
    
    .modal-active &
        left 0
        $opacity(1)
